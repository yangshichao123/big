      </if>
      <if test="loadtime != null">
        loadtime,
      </if>
      <if test="path != null">
        `path`,
      </if>
      <if test="filename != null">
        filename,
      </if>
      <if test="fileid != null">
        FileID,
      </if>
      <if test="uptime != null">
        uptime,
      </if>
      <if test="bz != null">
        bz,
      </if>
      <if test="videoType != null">
        video_type,
      </if>
      <if test="alarmId != null">
        alarm_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=VARCHAR},
      </if>
      <if test="ipcid != null">
